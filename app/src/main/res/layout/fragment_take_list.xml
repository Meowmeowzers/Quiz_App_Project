<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.bscs3a_2022.quizappproject2.TakeListViewModel" />
        <variable
            name="quizSet"
            type="com.bscs3a_2022.quizappproject2.quiz.database.entities.QuizSet" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_200"
        tools:context=".quiz.QuizTakeList">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/take_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/quiz_list_card"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>